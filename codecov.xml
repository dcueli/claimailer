codecov:
  require_ci_to_pass: yes

coverage:
  status:
    project:
      default:
        target: 0.80       # 80% global mínimo
        threshold: 0.02    # se permite bajar hasta 2 puntos antes de fallar
    patch:
      default:
        target: 0.90       # 90% mínimo en el código del PR
        threshold: 0.00    # no permitir bajar en el patch

comment:
  layout: "reach, diff, flags, files"
  behavior: default
  require_changes: true
